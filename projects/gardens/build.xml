<!-- project build configuration -->
<project name="Game Gardens" default="all" basedir=".">

  <!-- the base directory from which we get our bundles and jar files -->
  <property name="base.dir" value="../.."/>
  <property file="${base.dir}/toybox.properties"/>

  <!-- the web application name and derived parameters -->
  <property name="app.name"       value="gardens"/>
  <property name="src.dir"        value="src/java"/>
  <property name="deploy.dir"     value="dist"/>
  <property name="build.dir"      value="${deploy.dir}/${app.name}"/>
  <property name="dist.war"       value="${webapp_dir}/${app.name}.war"/>

  <!-- import some targets to enumerate library dependencies -->
  <property name="projects.root" value="${base.dir}"/>
  <property name="libs.dir" value="lib"/>
  <import file="libs-incl.xml"/>

  <!-- declare our classpath -->
  <path id="classpath">
    <pathelement location="${build.dir}/WEB-INF/classes"/>
    <fileset dir="${deploy.dir}/lib" includes="*.jar"/>
  </path>

  <!-- prepares the application directories -->
  <target name="prepare">
    <mkdir dir="${build.dir}"/>
    <copy todir="${build.dir}">
      <fileset dir="web" excludes="**/*.in"/>
    </copy>
    <mkdir dir="${build.dir}/WEB-INF/lib"/>
    <copy file="etc/web.xml" tofile="${build.dir}/WEB-INF/web.xml"/>
    <mkdir dir="${build.dir}/WEB-INF/classes"/>
    <copy todir="${build.dir}/WEB-INF/classes">
      <fileset dir="etc" includes="**/*.properties"/>
      <fileset dir="${base.dir}" includes="*.properties"/>
    </copy>
    <copy todir="${deploy.dir}/lib" flatten="true">
      <fileset refid="${app.name}.libs"/>
    </copy>
  </target>

  <!-- build the java class files -->
  <target name="compile" depends="prepare">
    <javac srcdir="${src.dir}" destdir="${build.dir}/WEB-INF/classes"
           debug="on" optimize="${build.optimize}">
      <classpath refid="classpath"/>
    </javac>
    <copy todir="${build.dir}/WEB-INF/classes">
      <fileset dir="src" includes="**/*.properties"/>
    </copy>
    <!-- copy the library jar files -->
    <copy todir="${build.dir}/WEB-INF/lib">
      <fileset dir="${deploy.dir}/lib" includes="**/*.jar"/>
    </copy>
  </target>

  <!-- cleans out the intermediate build files -->
  <target name="clean">
    <delete dir="${build.dir}/WEB-INF"/>
  </target>

  <!-- wipes the entire build directory clean -->
  <target name="distclean">
    <delete dir="${deploy.dir}"/>
    <delete file="${dist.war}"/>
  </target>

  <!-- the default target is to rebuild everything -->
  <target name="all" depends="prepare,compile"/>

  <!-- builds our distribution files (war and jar) -->
  <target name="dist" depends="all">
    <mkdir dir="dist"/>
    <!-- update the build timestamp file -->
    <propertyfile file="${build.dir}/WEB-INF/classes/build.properties">
      <entry key="build.time" type="date" value="now"/>
    </propertyfile>
    <jar basedir="${build.dir}" destfile="${dist.war}"/>
    <jar basedir="${build.dir}/WEB-INF/classes" excludes="toybox.properties"
         destfile="${deploy.dir}/${app.name}.jar"/>
  </target>
</project>
