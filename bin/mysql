#!/bin/sh
#
# $Id$
#
# A script for invoking mysql with a connection to our GG database

ROOT=`dirname $0 | sed s:/bin::`

# Load in our configuration info
if [ -f $ROOT/gardens.conf ]; then
    . $ROOT/gardens.conf
else
    echo "No $ROOT/gardens.conf could be found."
    exit 255
fi

if [ "$DBPORT" = "" ]; then
    # Supply our default
    DBPORT=3306
fi

mysql -u $DBUSER -p$DBPASSWD -h $DBSERVER -P $DBPORT "$@"
